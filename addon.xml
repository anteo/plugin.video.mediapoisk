        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.transmission" version="0.7.6"/>
        <import addon="plugin.program.utorrent" version="1.1.3"/>
        <import addon="script.module.torrent2http" version="0.0.6"/>
